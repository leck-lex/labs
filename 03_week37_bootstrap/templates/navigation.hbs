<header class="sticky-top">
    <nav class="navbar navbar-dark navbar-expand-lg bg-color-1">
        <div class="container px-3">
            <a class="navbar-brand" href="index.html"><img src="assets/svg/logo.svg" width="50px" alt="Logo"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav light">
                    {{#each pages}}
                    <li class="nav-item">
                        <a class="nav-link{{#if this.active}} active{{/if}}" href="{{this.url}}">{{this.name}}</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </nav>
</header>